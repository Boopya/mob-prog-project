<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_bg">

    <ImageView
        android:id="@+id/userProfileImageView"
        android:layout_width="@dimen/profile_tap_icon_image_view_width"
        android:layout_height="@dimen/profile_tap_icon_image_view_height"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tap" />

    <TextView
        android:id="@+id/currHighScoreTextView"
        android:layout_width="@dimen/currrent_high_score_text_view_width"
        android:layout_height="@dimen/currrent_high_score_text_view_height"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/nova_square"
        android:text="@string/your_current_high_score_txt"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textSize="@dimen/current_high_score_text_view_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userProfileImageView" />

    <TextView
        android:id="@+id/currentScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/nova_square"
        android:textSize="@dimen/current_score_text_view_size"
        android:text="@string/initial_score_txt"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currHighScoreTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>